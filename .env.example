# Exemple de variables d'environnement pour la production.
# Copier vers .env et adapter (ne pas commiter .env).

# Obligatoire en production : clé secrète forte et unique
DJANGO_SECRET_KEY=votre-cle-secrete-tres-longue-et-aleatoire

# Désactiver le mode debug en production
DJANGO_DEBUG=False

# Liste des domaines autorisés, séparés par des virgules
ALLOWED_HOSTS=example.com,www.example.com

# Optionnel : base de données (à configurer dans settings.py si besoin)
# DB_NAME=nzo_db
# DB_USER=...
# DB_PASSWORD=...
# DB_HOST=localhost
# DB_PORT=3306
